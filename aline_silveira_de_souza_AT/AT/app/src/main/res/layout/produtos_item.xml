<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#98D8F4"
    android:padding="10dp">

    <ImageView
        android:id="@+id/fotoProduto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/shampoo"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/nomeProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shampoo Ceramidas"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#F6EFEF"
        android:shadowRadius="1"
        android:shadowColor="#DC7F9F"
        android:shadowDx="3"
        android:shadowDy="2"
        android:layout_marginStart="140dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toEndOf="@id/fotoProduto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/descricaoProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Shampoo para cabelos lisos 350ml"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="#010E55"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:maxLines="4"
        app:layout_constraintTop_toBottomOf="@id/nomeProduto"
        app:layout_constraintStart_toEndOf="@id/fotoProduto"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/precoProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="R$ 25,99"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#F6EFEF"
        android:shadowRadius="1"
        android:shadowColor="#DC7F9F"
        android:shadowDx="3"
        android:shadowDy="2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/descricaoProduto"
        app:layout_constraintStart_toEndOf="@id/fotoProduto"/>

    <Button
        android:id="@+id/addButton"
        android:layout_width="47dp"
        android:layout_height="40dp"
        android:padding="3dp"
        android:text="+"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.713"
        app:layout_constraintStart_toEndOf="@+id/precoProduto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97" />

    <TextView
        android:id="@+id/quantidadeProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:text="1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#F6EFEF"
        android:shadowRadius="1"
        android:shadowColor="#DC7F9F"
        android:shadowDx="3"
        android:shadowDy="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addButton"
        app:layout_constraintHorizontal_bias="0.887"
        app:layout_constraintStart_toEndOf="@+id/precoProduto"
        app:layout_constraintTop_toBottomOf="@+id/descricaoProduto"
        app:layout_constraintVertical_bias="0.476" />

</androidx.constraintlayout.widget.ConstraintLayout>